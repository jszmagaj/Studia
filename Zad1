public class Main {

    public static void main(String[] args) {
        System.out.println(sum(4000000));

    }

    public static long sum(int n){
        if (n < 2)
            return 0;
        long a = 0, b = 2;
        long add = a + b;

        while (b <= n){
            long c = 4 * b + a;
            if (c > n)
                break;
            a = b;
            b = c;
            add += b;
        }
        return add;
    }
}
